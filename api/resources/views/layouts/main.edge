    <script type="text/javascript">
        let darkLayout = document.querySelector('.dark_layout')
        let lightLayout = document.querySelector('.light_layout')
        let body = document.querySelector('body')

        // Default theme
        if (localStorage.getItem('isDarkMode') === "true") {
            body.classList.add('dark_theme')
        }

        // Active dark mode
        darkLayout.addEventListener('click', () => {
            body.classList.add('dark_theme')
            localStorage.setItem('isDarkMode', "true")
        })
        // Active light mode
        lightLayout.addEventListener('click', () => {
            body.classList.remove('dark_theme')
            localStorage.removeItem('isDarkMode')
        })
    </script>
    <script>
        // Flash message
        let flashError = "{{ flashMessages.has('error') }}"
        let flashSuccess = "{{ flashMessages.has('success') }}"

        if (flashSuccess === "true") {
             // Add messages flash
             Toastify({
                text: "{{ flashMessages.get('success') }}",
                backgroundColor: "#07bc0c",
                duration: 2000,
                close: true,
                gravity: "top",
                position: "right"
            }).showToast()
        }

        if (flashError === "true") {
            // Add messages flash
            Toastify({
                text: "{{ flashMessages.get('error') }}",
                backgroundColor: "#f34343",
                duration: 2000,
                close: true,
                gravity: "top",
                position: "right"
            }).showToast()
        }
    </script>
